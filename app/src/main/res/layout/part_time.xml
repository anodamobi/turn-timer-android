<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/ic_background_oval"
              android:gravity="center">

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/npMinutes"
        style="@style/NumberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:np_formatter="@string/number_picker_formatter_min"/>

    <TextView
        android:id="@+id/tvMins"
        style="@style/TitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/min"
        android:textColor="@color/slateGrey"
        android:textSize="18sp"/>

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/npSeconds"
        style="@style/NumberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:np_formatter="@string/number_picker_formatter_sec"/>

    <TextView
        android:id="@+id/tvSecs"
        style="@style/TitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/slateGrey"
        android:text="@string/sec"
        android:textSize="18sp"/>

</LinearLayout>